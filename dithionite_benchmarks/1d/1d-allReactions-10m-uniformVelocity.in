SIMULATION
  SIMULATION_TYPE SUBSURFACE
  PROCESS_MODELS
    SUBSURFACE_TRANSPORT transport
      GLOBAL_IMPLICIT
      NUMERICAL_JACOBIAN
    /
  /
#  RESTART 1d-allReactions-10m-checkpoint-restart.chk 0.
END

SUBSURFACE

#=========================== useful tranport parameters ==================
UNIFORM_VELOCITY 1.50e-01 0.d0 0.d0 m/d

#=========================== chemistry ========================================
CHEMISTRY
  PRIMARY_SPECIES
    H+
    O2(aq)
    CrO4--
    S2O4--
    S2O3--
    SO3--
    SO4--
    Fe+++
    Fe++
    Cr+++
    HCO3-
    Ca++
    K+
    Na+
  /
  SECONDARY_SPECIES
    OH-
    CO3--
    CO2(aq)
  /
  IMMOBILE_SPECIES
    slow_Fe++
    fast_Fe++
  /
  REACTION_SANDBOX
    DITHIONITE_PARAMETERS
      K_S2O4_DISP       3.61d-05  # /s, Istok (1999), 0.13 /hr
      K_S2O4_O2         1.00e0
      K_S2O4_FE3        1.00e-05
      K_FE2_O2_FAST     1.00e+01
      K_FE2_O2_SLOW     1.00e-01
      K_FE2_CR6_FAST    1.00e+01
      K_FE2_CR6_SLOW    1.00e-01
      ROCK_DENSITY      1200.d0   # kg/m^3_bulk
      SSA_FEOH3         175.d0    # m^2/g
      ALPHA             6.d-01
      EPS               1.d-30
    /
  /
  MINERALS
    Fe(OH)3(s)
    Cr(OH)3(s)
    Calcite
  /
  MINERAL_KINETICS
    Fe(OH)3(s)
      RATE_CONSTANT 1.d-5 mol/m^2-sec
    /
    Cr(OH)3(s)
      RATE_CONSTANT 1.d-5 mol/m^2-sec
    /
    Calcite
      RATE_CONSTANT 1.d-5 mol/m^2-sec
    /
  /
  DATABASE ../../database/chromium_dithionite.dat
  ACTIVITY_COEFFICIENTS TIMESTEP
  LOG_FORMULATION
  OUTPUT
    ALL
    FREE_ION
    TOTAL
    SECONDARY_SPECIES
    PH
  /
END

#=========================== solver options ===================================
NEWTON_SOLVER TRANSPORT
  ITOL_UPDATE 1.d-5
  ITOL 1.d-12
  RTOL 1.d-8
  STOL 1.d-30
END

#=========================== discretization ===================================
